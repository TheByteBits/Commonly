{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",

    "outDir": "./bin/",
    "rootDir": "./src/",
    "sourceMap": true,

    "declaration": true,
    "experimentalDecorators": true,

    "baseUrl": "./src/",
    "paths": {
      "*": [ "*" ]
    },


    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "exclude": [
    "./node_modules/",
    "./**/*.spec.ts"
  ]
}